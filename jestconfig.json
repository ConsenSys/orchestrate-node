{
  "transform": {
    "^.+\\.(t|j)sx?$": "ts-jest"
  },
  "testRegex": "((\\.|/)(test|spec))\\.(jsx?|tsx?)$",
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
  "collectCoverageFrom": [
    "src/**/*.{ts,js}",
    "!<rootDir>/node_modules/",
    "!src/**/index.{ts,js}",
    "!src/stubs/*",
    "!src/kafka/helpers/unmarshallers.ts"
  ],
  "coverageThreshold": {
    "global": {
      "statements": 90,
      "branches": 80,
      "functions": 85,
      "lines": 90
    }
  }
}
