{
  "name": "core-stack-sdk",
  "version": "0.2.0",
  "description": "Core Stack SDK",
  "main": "./lib/index.js",
  "scripts": {
    "clean": "rimraf ./coverage ./lib",
    "test": "cross-env NODE_ENV=test jest",
    "lint": "eslint src",
    "test:clean": "cross-env NODE_ENV=test jest --clearCache",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "test:cover": "cross-env NODE_ENV=test jest --coverage",
    "coveralls": "npm run test:cover && cat ./coverage/lcov.info | coveralls",
    "build": "cross-env BABEL_ENV=production babel src --plugins @babel/plugin-transform-runtime --out-dir lib",
    "prepublish": "npm run clean && npm run lint && npm run test && npm run build",
    "webpack": "webpack --mode production"
  },
  "keywords": [
    "blockchain",
    "ethereum",
    "core-stack",
    "transaction",
    "kafka",
    "protobuf"
  ],
  "files": [
    "lib"
  ],
  "author": "Christian Tran <christian.tran@consensys.com>",
  "devDependencies": {
    "@babel/cli": "~7.2.3",
    "@babel/core": "~7.3.4",
    "@babel/plugin-proposal-class-properties": "~7.3.4",
    "@babel/plugin-proposal-json-strings": "~7.2.0",
    "@babel/plugin-syntax-dynamic-import": "~7.2.0",
    "@babel/plugin-syntax-import-meta": "~7.2.0",
    "@babel/plugin-transform-runtime": "~7.3.4",
    "@babel/preset-env": "~7.3.4",
    "@babel/register": "~7.0.0",
    "babel-eslint": "~10.0.1",
    "babel-loader": "~8.0.5",
    "coveralls": "~3.0.3",
    "cross-env": "~5.2.0",
    "enzyme": "~3.9.0",
    "eslint": "~5.15.1",
    "eslint-loader": "~2.1.2",
    "eslint-plugin-jest": "~22.3.2",
    "jest": "~24.1.0",
    "rimraf": "~2.6.3",
    "webpack": "~4.29.6",
    "webpack-cli": "~3.2.3",
    "webpack-node-externals": "~1.7.2"
  },
  "dependencies": {
    "@babel/runtime": "~7.3.4",
    "google-protobuf": "~3.7.0",
    "kafka-node": "~4.0.2",
    "uuid": "~3.3.2",
    "web3-utils": "~1.0.0-beta.48"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!<rootDir>/src/types/*/*_pb.js"
    ]
  }
}
