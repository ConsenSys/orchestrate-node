{
  "name": "core-stack-sdk",
  "version": "0.4.8",
  "description": "CoreStack SDK",
  "main": "./build/bundle.js",
  "types": "./typedefinitions/index.d.ts",
  "scripts": {
    "clean": "rimraf ./coverage ./build ./lib",
    "test": "cross-env NODE_ENV=test jest",
    "lint": "eslint src",
    "test:clean": "cross-env NODE_ENV=test jest --clearCache",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "test:cover": "cross-env NODE_ENV=test jest --coverage",
    "coveralls": "npm run test:cover && cat ./coverage/lcov.info | coveralls",
    "build": "webpack --mode production"
  },
  "keywords": [
    "blockchain",
    "ethereum",
    "CoreStack",
    "transaction",
    "kafka",
    "protobuf"
  ],
  "files": [
    "build",
    "typedefinitions"
  ],
  "author": "Christian Tran <christian.tran@consensys.com>",
  "devDependencies": {
    "@babel/cli": "~7.2.3",
    "@babel/core": "~7.3.4",
    "@babel/plugin-proposal-class-properties": "~7.3.4",
    "@babel/plugin-proposal-json-strings": "~7.2.0",
    "@babel/plugin-syntax-dynamic-import": "~7.2.0",
    "@babel/plugin-syntax-import-meta": "~7.2.0",
    "@babel/plugin-transform-runtime": "~7.3.4",
    "@babel/preset-env": "~7.3.4",
    "@babel/register": "~7.0.0",
    "@babel/runtime": "~7.3.4",
    "babel-eslint": "~10.0.1",
    "babel-jest": "~24.8.0",
    "babel-loader": "~8.0.5",
    "coveralls": "~3.0.3",
    "cross-env": "~5.2.0",
    "enzyme": "~3.9.0",
    "eslint": "~5.15.1",
    "eslint-loader": "~2.1.2",
    "eslint-plugin-jest": "~22.3.2",
    "jest": "~24.1.0",
    "rimraf": "~2.6.3",
    "typescript": "~3.5.2",
    "webpack": "~4.29.6",
    "webpack-cli": "~3.2.3",
    "webpack-node-externals": "~1.7.2"
  },
  "dependencies": {
    "@types/web3": "~1.0.19",
    "bimap": "0.0.15",
    "core-js": "~3.1.4",
    "google-protobuf": "~3.8.0",
    "kafka-node": "~4.1.3",
    "regenerator-runtime": "~0.13.3",
    "uuid": "~3.3.2",
    "web3": "~1.2.0",
    "web3-core": "~1.2.0",
    "web3-core-requestmanager": "~1.2.0",
    "web3-utils": "~1.2.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!<rootDir>/src/broker/types/*/*_pb.js"
    ]
  }
}
